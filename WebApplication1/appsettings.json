{
  "Logging": {
    "LogLevel": { // No provider, LogLevel applies to all the enabled providers.
      "Default": "Debug", // Error
      "Microsoft": "Debug", // Warning
      "Microsoft.Hosting.Lifetime": "Debug" // Warning
    },
    "Debug": { // Debug provider.
      "LogLevel": {
        "Default": "Debug" // Overrides preceding LogLevel:Default setting.
      }
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Debug", // Warning
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug", // Debug
        "Microsoft.AspNetCore.Mvc.Razor": "Debug", // Error
        "Default": "Debug" // Debug
      }
    }
  },
  "AllowedHosts": "*"
}
